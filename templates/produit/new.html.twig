{% extends 'back.html.twig' %}
{% block title %}Produits{% endblock %}

{% block body %}
    <div class="row">
                <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">Creer produit</h5>
                      
                    </div>
                    <div class="card-body">
                     {{ form_start(form) }}
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-fullname">Nom produit</label>
                         
                          {{ form_widget(form.nomprod, { 'attr': {'class': 'form-control'} }) }}
                          
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-company">prix produit</label>
                           {{ form_widget(form.prixprod, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                         <div class="mb-3">
                          <label class="form-label" for="basic-default-message">Description produit</label>
                          {{ form_widget(form.descriptionprod, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="mb-3">
                          <label class="form-label" for="basic-default-message">Remise</label>
                          {{ form_widget(form.remise, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-message">image</label>
                          {{ form_widget(form.imageprod, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        
                        
                        <button class="btn btn-primary">{{ button_label|default('Enregistrer votre produit') }}</button>
                       
                      </form>
                       {{ form_end(form) }}
                    </div>
                  </div>
                </div>
               
{% endblock %}
